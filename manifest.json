{
  "name": "TikTok 2x Speed Option",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Hold down on the sides of a tiktok video to increase speed",
  "permissions": ["storage", "scripting"],
  "host_permissions": ["*://*.tiktok.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.tiktok.com/*"],
      "js": ["libs/mutation_summary.js", "script.js", "popup.js", "observer.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TikTok 2x Speed Option"
  }
}
